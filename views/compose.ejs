<%- include('partials/header'); -%>   

  <div class="px-4 py-5 my-5 text-center">
      <h1 class="display-5 fw-bold">WRITE POST</h1>
      <div class="col-lg-6 mx-auto">
        <form action="/compose" method="POST">
          <div class="form-group mb-4">
            <lable>Publishing Date</lable>
            <input type="date" name="publishingDate">
          </div>
          <div class="form-group">
            <input type="text" class="form-control mb-4" placeholder="Post Title" name="postTitle">
          </div>
          <div class="form-group">
            <textarea class="form-control mb-4" rows="3" placeholder="Post Content" name="postContent"></textarea>
          </div>
          <div>
            <button type="submit" class="btn button" name="button">+ ADD POST</button>
          </div>
        </form>
      </div>
  </div>
        
<%- include('partials/footer'); -%>